CREATE DATABASE IF NOT EXISTS tasks_data;

USE tasks_data;

CREATE TABLE tasks(
id INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
description VARCHAR(255) NOT NULL,
priority ENUM('low', 'medium', 'high'),
entry_date DATE NOT NULL,
completition_date DATE NOT NULL
);

